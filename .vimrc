" setting
set fenc=utf-8
set nobackup
set noswapfile
set autoread
set hidden

" view
set number
set cursorline
set cursorcolumn
set smartindent
set showmatch
set wildmode=list:longest
set syntax on
set title

" Tab
set list listchars=tab:>-
set expandtab
set tabstop=4
set shiftwidth=4

" find
set ignorecase
set smartcase
set incsearch
set wrapscan

" mouse
set mouse=a
